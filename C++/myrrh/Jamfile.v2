#
# Sandbox
#
for local file in [ glob src/sandbox/*.cpp ]
{
	local target = [ path.basename $(file) ] ;
	exe sandbox_$(target)
		:
			$(file)
		:
			<include>$(SEQAN_PATH)
		;
	SANDBOX_TARGETS += sandbox_$(target) ;
}
alias sandbox : $(SANDBOX_TARGETS) ;


