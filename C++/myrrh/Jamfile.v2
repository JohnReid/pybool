import path ;



#
# Rule to add '-d' to debug shared libs
#
rule debug-tag ( name : type ? : property-set )
{
	if "$(type)" = "SHARED_LIB" && "debug" = [ $(property-set).get <variant> ] {
		result = "$(name)-d" ;
	} else {
		result = "" ;
	}
	# echo "In rule tag; name='$(name)'; type='$(type)'; returning: '$(result)'" ;
	return "$(result)" ;
}




#
# sub-project Myrrh
#
project Myrrh
	: requirements
		<include>.
		<include>$(BOOST_ROOT)
		<include>$(BOOST_ITL) 
		<define>BOOST_ALL_NO_LIB # disable boost auto-linking
		<include>$(NUMPY_PATH)/numpy/core/include
		<tag>@debug-tag
	: usage-requirements
		<include>.
		<include>$(BOOST_ROOT)
		<include>$(BOOST_ITL) 
		<include>$(NUMPY_PATH)/numpy/core/include
	;



 
#   
# header only library
#
alias myrrh ;



#
# library
#
LIB_SRCS =
	application
	;
lib myrrh_lib
	: 
		src/$(LIB_SRCS).cpp
		/boost/program_options//boost_program_options
		/boost/date_time//boost_date_time
	:
		#<link>static
	;


#
# python library
#
PYLIB_SRCS =
	python/multi_array_to_numpy
	;
lib myrrh_pylib
	: 
		src/$(PYLIB_SRCS).cpp
		/boost/python//boost_python
	:
		#<link>static
	;



#
# Tests
#
TEST_SRCS =
	trie
	bit_set
	#suffix_tree
	chain_iterator
	seqan_adaptors
	type_names
	;
for test_src in $(TEST_SRCS)
{
	unit-test test_$(test_src)
		:
			.//myrrh
			test/test_$(test_src).cpp
			/boost/test//boost_unit_test_framework/<link>static
			/site-config//seqan
		:
			<define>BOOST_ALL_NO_LIB=1
			<define>_SCL_SECURE_NO_WARNINGS
			<define>_CRT_SECURE_NO_WARNINGS
			<toolset>msvc:<variant>debug:<testing.launcher>=dbg.bat
		;
	#explicit test_$(test_src) ;
}
alias all_tests : test_$(TEST_SRCS) ;


